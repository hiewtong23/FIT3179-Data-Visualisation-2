{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Dual-axis line chart comparing 4G availability and download speed by state.",
  "data": {"url": "data/dual-axis.csv"},
  "title":"Dual-Axis Comparison of 4G Availability and Median Download Speed by State (2022)",
  "width": 510,
  "height": 300,

  "layer": [
    {
      "mark": {"type": "line", "strokeWidth": 2, "color": "#1f77b4", "point": true},
      "encoding": {
        "x": {
          "field": "state",
          "type": "nominal",
          "axis": {"labelAngle": -40},
          "sort": null
        },
        "y": {
          "field": "Availability_Q1_2022",
          "type": "quantitative",
          "title": "4G Availability (%)",
          "axis": {"titleColor": "#1f77b4","grid": true},
          "scale": {"domain": [30, 100]}
        },
        
        "tooltip": [
          {"field": "state"},
          {"field": "Availability_Q1_2022", "title": "4G Availability (%)"},
          {"field": "Median Download (Mbps)", "title": "Median Download (Mbps)"}
        ]
      }
    },
    {
      "mark": {"type": "line", "strokeWidth": 2, "color": "#ff7f0e", "point": true},
      "encoding": {
        "x": {"field": "state", "type": "nominal", "sort":null},
        "y": {
          "field": "Median Download (Mbps)",
          "type": "quantitative",
          "axis": {"title": "Median Download Speed (Mbps)", "titleColor": "#ff7f0e","grid": false},
          "scale": {"domain": [15, 30]}
        }
      }
    },
      {
      "mark": {
        "type": "text",
        "align": "center",
        "dx": 4,
        "dy": -6,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#1f77b4"
      },
      "encoding": {
        "x": {"field": "state", "type": "nominal"}
      },
      "transform": [{"filter": "datum.state === 'Putrajaya'"}]
    }

  ],
  "resolve": {"scale": {"y": "independent"}}
}
