{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "title": "Availability vs Mean Household Income (Q1 2022)",

   "params": [
    {
      "name": "region_filter",
      "value": null,
      "bind": {
        "input": "select",
        "options": [null, "Peninsular Malaysia", "East Malaysia"],
        "labels": ["Show All", "Peninsular Malaysia", "East Malaysia"],
        "name": "Filter by Region: "
      }
    }
  ],
  "layer": [
    {
      "data": { "url": "data/4G_availability_in_Malaysia.csv" },
      "transform": [{"filter": "!region_filter || datum.Region == region_filter"}],
      "mark": {
        "type": "circle",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "x": {
          "field": "Availability_Q1_2022",
          "type": "quantitative",
          "title": "4G Availability (%)",
          "scale": {"domain": [85, 100]}
        },
        "y": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean Household Income (RM)",
          "axis": {"format": "~s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": ["Peninsular Malaysia", "East Malaysia"],
            "range": ["#1f77b4", "#ff7f0e"]
          },
          "legend": {"title": "Region"}
        },
        "size": {
          "field": "poverty",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {"range": [100, 2000]}
        },
        "opacity": {"value": 0.8},
        "tooltip": [
          {"field": "States", "title": "State"},
          {"field": "Region", "title": "Region"},
          {"field": "Availability_Q1_2022", "title": "4G Availability (%)"},
          {"field": "income_mean", "title": "Mean Income (RM)"},
          {"field": "poverty", "title": "Poverty Rate (%)"}
        ]
      }
    },
      {
      "data": { "url": "data/4G_availability_in_Malaysia.csv" },
      "transform": [{"filter": "!region_filter || datum.Region == region_filter"}],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 6,
        "dy": -5,
        "color": "black",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"field": "Availability_Q1_2022", "type": "quantitative"},
        "y": {"field": "income_mean", "type": "quantitative"},
        "text": {"field": "States"},
        "opacity": {
          "condition": {
            "test": "datum.States == 'Putrajaya' || datum.States == 'Sarawak' || datum.States == 'Terengganu' || datum.States == 'Perak'||datum.States == 'Sabah'||datum.States == 'Labuan'",
            "value": 1
          },
          "value": 0
        }
      }
    },

    {
      "data": { "url": "data/4G_availability_in_Malaysia.csv" },
      "transform": [{"regression": "income_mean", "on": "Availability_Q1_2022"}],
      "mark": {"type": "line", "color": "red", "strokeWidth": 2},
      "encoding": {
        "x": {"field": "Availability_Q1_2022", "type": "quantitative"},
        "y": {"field": "income_mean", "type": "quantitative"},
        "tooltip": [
          {"field": "rSquared", "title": "RÂ²", "format": ".3f"},
          {"field": "slope", "title": "Slope", "format": ".3f"},
          {"field": "intercept", "title": "Intercept", "format": ".2f"}
        ]
      }
    }
    
  ]
}
