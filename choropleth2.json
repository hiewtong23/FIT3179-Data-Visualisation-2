{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 300,
  "layer": [
    {
      "data": {
        "url": "data/ne_1.json",
        "format": { "type": "topojson", "feature": "states2" }
      },
      "projection": { "type": "mercator" },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#e0e0e0",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "data/ne_1.json",
        "format": { "type": "topojson", "feature": "states1" }
      },
      "projection": { "type": "mercator" },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": { "url": "data/4G_availability_in_Malaysia.csv" },
            "key": "States",
            "fields": ["Median Download (Mbps)"]
          }
        },
        {
        "calculate": "datum['properties.name']",
        "as": "State"
      }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Median Download (Mbps)",
          "type": "quantitative",
          "title": "Median Download (Mbps)",
          "scale": { "scheme": "reds" },
          "legend": {
        "title": "4G availability (%)",
        "titleFontSize": 13,
        "labelFontSize": 11,
        "orient": "right",           
        "direction": "vertical",    
        "offset": 10,                
        "gradientLength": 120,      
        "titleAnchor": "middle"      
      }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "Median Download (Mbps)", "title": "Median Download (Mbps)" }
        ],
        "opacity": {
          "condition": {"selection": "StateFilter", "value": 1},
          "value": 0.2
        }
      },
      "selection": {
        "StateFilter": {
          "type": "single",
          "fields": ["properties.name"],
          "bind": {
            "input": "select",
            "options": [
              null,
              "Johor","Kedah","Kelantan","Melaka","Negeri Sembilan","Pahang",
              "Pulau Pinang","Perak","Perlis","Selangor","Terengganu","Sabah","Sarawak"
            ],
            "labels": [ "Show All",
              "Johor","Kedah","Kelantan","Melaka","Negeri Sembilan","Pahang",
              "Pulau Pinang","Perak","Perlis","Selangor","Terengganu","Sabah","Sarawak"],
            "name": "Select State: "
          }
        }
      }
    },
     {
      "data": {
        "values": [
          {
            "x1": 102.6, "y1": 3.9, "x2": 104.3, "y2": 4.3  
          },
          {
            "x1": 101.8, "y1": 5.12, "x2": 104.3, "y2": 6.5  
          }
        ]
      },
      "mark": {
        "type": "rule",
        "color": "#b34b17",
        "strokeWidth": 1.5
      },
      "encoding": {
        "longitude": {"field": "x1"},
        "latitude": {"field": "y1"},
        "longitude2": {"field": "x2"},
        "latitude2": {"field": "y2"}
      }
    },

    {
      "data": {
        "values": [
          {
            "note": "Pahang - Highest download speed: 25.12mbps",
            "longitude": 104.4,
            "latitude": 4.35
          },
          {
            "note": "Kelantan - Lowest download speed: 19.02mbps",
            "longitude": 104.4,
            "latitude": 6.7
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3,
        "fontSize": 10,
        "fontWeight": "bold",
        "color": "#b34b17"
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "note"}
      }
    }
  ]
}