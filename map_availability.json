{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 300,
  
  "layer": [
    {
      "data": {
        "url": "data/ne_1.json",
        "format": { "type": "topojson", "feature": "states2" }
      },
      "projection": { "type": "mercator" },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "#e0e0e0",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "data/ne_1.json",
        "format": { "type": "topojson", "feature": "states1" }
      },
      
      "projection": { "type": "mercator"},
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": { "url": "data/4G_availability_in_Malaysia.csv" },
            "key": "States",
            "fields": ["Availability_Q1_2022"]
          }
        },
        {
        "calculate": "datum['properties.name']",
        "as": "State"
      }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Availability_Q1_2022",
          "type": "quantitative",
          "title": "4G availability (%)",
          "scale": {
    "scheme": {"name": "blues", "extent": [0, 1.2]}
  },
          "legend": {
        "title": "4G availability (%)",
        "titleFontSize": 13,
        "labelFontSize": 11,
        "orient": "right",           
        "direction": "vertical",    
        "offset": 10,                
        "gradientLength": 120,      
        "titleAnchor": "middle"      
      }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "Availability_Q1_2022", "title": "4G availability", "format": ".1f" }
        ],
        "opacity": {
          "condition": {"selection": "StateFilter", "value": 1},
          "value": 0.2
        }
      },
      "selection": {
        "StateFilter": {
          "type": "single",
          "fields": ["properties.name"],
          "bind": {
            "input": "select",
            "options": [
              null,
              "Johor","Kedah","Kelantan","Melaka","Negeri Sembilan","Pahang",
              "Pulau Pinang","Perak","Perlis","Selangor","Putrajaya","Terengganu","Sabah","Sarawak"
            ],
            "labels": [ "Show All",
              "Johor","Kedah","Kelantan","Melaka","Negeri Sembilan","Pahang",
              "Pulau Pinang","Perak","Perlis","Selangor","Putrajaya","Terengganu","Sabah","Sarawak"],
            "name": "Select State: "
          }
        }
      }
    },
 {
      "data": {
        "values": [
          {
            "x1": 101.6, "y1": 3.1, "x2": 104.3, "y2": 4.3  
          },
          {
            "x1": 116.1, "y1": 5.3, "x2": 113.3, "y2": 7.5  
          }
        ]
      },
      "mark": {
        "type": "rule",
        "color": "#08306b",
        "strokeWidth": 1.3
      },
      "encoding": {
        "longitude": {"field": "x1"},
        "latitude": {"field": "y1"},
        "longitude2": {"field": "x2"},
        "latitude2": {"field": "y2"}
      }
    },

    {
      "data": {
        "values": [
          {
            "note": "Putrajaya - Highest availability: ~96%",
            "longitude": 104.4,
            "latitude": 4.35
          },
          {
            "note": "Sabah - Lowest availability: ~89%",
            "longitude": 109.2,
            "latitude": 7.7
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3,
        "fontSize": 10,
        "fontWeight": "bold",
        "color": "#08306b"
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "note"}
      }
    }
  ]
}

